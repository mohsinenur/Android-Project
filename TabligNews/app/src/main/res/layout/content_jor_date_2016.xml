<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    tools:context=".MainActivity"
    android:background="#de540136">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="২০১৬ জোড়ের তারিখ"
            android:textSize="27sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/date_jor_2016"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="২, ৩, ৪, ৫, ৬ ডিসেম্বর"
            android:id="@+id/textView"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/date_jor_2016"
            android:layout_centerHorizontal="true"
            android:textColor="#5551cd"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="মানিকগঞ্জ জেলা খুরুজ বিবরন (২০১৫-২০১৬)"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/ctext_mjkhuruj15_16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/textView"
            android:textColor="#c4c3c3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image10_mjkhuruj15_16"
            android:scaleType="fitXY"
            android:paddingTop="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/image10"
            android:layout_below="@+id/ctext_mjkhuruj15_16"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image11_mjkhuruj15_16"
            android:scaleType="fitXY"
            android:paddingTop="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/image11"
            android:layout_below="@+id/image10_mjkhuruj15_16"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image12_mjkhuruj15_16"
            android:scaleType="fitXY"
            android:paddingTop="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/image12"
            android:layout_below="@+id/image11_mjkhuruj15_16"/>


            </RelativeLayout>

    </ScrollView>

</RelativeLayout>
